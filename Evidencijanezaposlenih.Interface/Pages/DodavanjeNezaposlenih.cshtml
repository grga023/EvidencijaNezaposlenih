@page
@model Evidencijanezaposlenih.Interface.Pages.DodavanjeNezaposlenihModel
@{
    ViewData["Title"] = "Dodavanje Zaposlenih";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rezor Web App - Data Entry Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: inline-block;
            font-weight: bold;
            margin-bottom: 10px;
            width: 150px; /* Set width for labels */
            font-size: 18px; /* Larger font size */
        }
        input[type="text"], input[type="date"] {
            width: 150px; /* Set width for input fields */
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }
        input[type="submit"]:hover {
            background-color: #0056b3;
        }
        .separator {
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }
        .work-row {
            display: flex;
            align-items: center;
        }
        .add-row {
            margin-top: 20px;
            cursor: pointer;
            color: #007bff;
        }
        .work-label {
            font-size: 18px; /* Larger font size for labels */
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Enter Information</h2>
        <form id="data-entry-form" method="post" >
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="surname">Surname:</label>
                <input type="text" id="surname" name="surname" required>
            </div>
            <div class="form-group">
                <label for="dateOfBirth">Date of Birth:</label>
                <input type="date" id="dateOfBirth" name="dateOfBirth" required>
            </div>
            <div class="form-group">
                <label for="jmbg">JMBG:</label>
                <input type="text" id="jmbg" name="jmbg" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number:</label>
                <input type="text" id="phoneNumber" name="phoneNumber" required>
            </div>
            <div class="separator"></div>
            <h3>List of Work Experience</h3>
            <div class="work-experience">
                <div class="work-row">
                    <label class="work-label" for="nazivFirme">Naziv Firme:</label>
                    <div class="form-group">
                        <input type="text" class="naziv-firme" name="nazivFirme[]" required>
                    </div>
                    <label class="work-label" for="datumPocetka">Datum Pocetka:</label>
                    <div class="form-group">
                        <input type="date" class="datum-pocetka" name="datumPocetka[]" required>
                    </div>
                    <label class="work-label" for="datumZavrsetka">Datum Zavrsetka:</label>
                    <div class="form-group">
                        <input type="date" class="datum-zavrsetka" name="datumZavrsetka[]" required>
                    </div>
                </div>
            </div>
            <div class="add-row" onclick="addWorkExperienceRow()">+ Add Work Experience</div>
            <input type="submit" value="Submit">
        </form>
    </div>
</body>
   
    <script>
        function addWorkExperienceRow() {
            const workExperienceContainer = document.querySelector('.work-experience');
            const newRow = document.createElement('div');
            newRow.classList.add('work-row');
            newRow.innerHTML = `
                <label class="work-label" for="nazivFirme">Naziv Firme:</label>
                <div class="form-group">
                    <input type="text" class="naziv-firme" name="nazivFirme[]" required>
                </div>
                <label class="work-label" for="datumPocetka">Datum Pocetka:</label>
                <div class="form-group">
                    <input type="date" class="datum-pocetka" name="datumPocetka[]" required>
                </div>
                <label class="work-label" for="datumZavrsetka">Datum Zavrsetka:</label>
                <div class="form-group">
                    <input type="date" class="datum-zavrsetka" name="datumZavrsetka[]" required>
                </div>
            `;
            workExperienceContainer.appendChild(newRow);
        }
    </script>
    
